{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SoundType",
	"patterns": [
		{
		  "name": "keyword.control.soundtype",
		  "match": "\\b(if|else|for|return|with|let|in|lam)\\b"
		},
		{
		  "name": "storage.type.soundtype",
		  "match": "\\b(Int|Double|Bool|String|Scale|Rythm|Progression|Groove|Phrase|Track|Song|Void)\\b"
		},
		{
		  "name": "constant.numeric.soundtype",
		  "match": "\\b\\d+(\\.\\d+)?\\b"
		},
		{
		  "name": "string.quoted.double.soundtype",
		  "begin": "\"",
		  "end": "\"",
		  "patterns": [
			{
			  "name": "constant.character.escape.soundtype",
			  "match": "\\\\."
			}
		  ]
		},
		{
		  "name": "variable.soundtype",
		  "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
		},
		{
		  "name": "keyword.operator.soundtype",
		  "match": "\\|=|&=|\\*=|\\^=|%=|\\+=|-=|/=|=|\\|>|\\*|/|%|&|\\+|\\-|\\||==|<=|>=|!=|>|<|&&|\\|\\||-|\\+|->|\\^|>>"
		},
		{
		  "name": "comment.line.double-slash.soundtype",
		  "match": "//.*$"
		},
		{
		  "name": "constant.language.pitch.soundtype",
		  "match": "\\b[A-G]#?\\b"
		},
		{
		  "name": "constant.language.rythm.soundtype",
		  "match": "\\b(dl|l|w|h|q|e|s|t)(_d|_t)?\\b"
		}
	  ],
	  "repository": {
		"lambdaExpression": {
		  "patterns": [
			{
			  "include": "#lambdaDecl"
			}
		  ]
		},
		"lambdaDecl": {
		  "begin": "\\bwith\\b",
		  "end": "\\b->\\b",
		  "patterns": [
			{
			  "name": "variable.parameter.soundtype",
			  "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
			}
		  ]
		}
	  },
	"scopeName": "source.soundtype"
}